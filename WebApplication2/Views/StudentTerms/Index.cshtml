@model IEnumerable<WebApplication2.Models.StudentTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by String: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentTermNo"]">@Html.DisplayNameFor(model => model.StudentTermNo)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermAbbrev"]">@Html.DisplayNameFor(model => model.TermAbbrev)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermName"]">@Html.DisplayNameFor(model => model.TermName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Student"]">@Html.DisplayNameFor(model => model.Student)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentTermNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentTermId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentTermId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentTermId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>