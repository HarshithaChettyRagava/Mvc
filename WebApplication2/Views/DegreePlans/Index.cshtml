}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentId"]">@Html.DisplayNameFor(model => model.StudentId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreePlanAbbrev"]">@Html.DisplayNameFor(model => model.DegreePlanAbbrev)</a>
