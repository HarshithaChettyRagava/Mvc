@model IEnumerable<WebApplication2.Models.Degree>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeId"]">@Html.DisplayNameFor(model => model.DegreeId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeAbrrev"]">@Html.DisplayNameFor(model => model.DegreeAbrrev)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreeName"]">@Html.DisplayNameFor(model => model.DegreeName)</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeAbrrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
